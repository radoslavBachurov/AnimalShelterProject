@{
    this.ViewData["Title"] = "Adopt a Pet";
}

@using AnimalShelter.Web.ViewModels.SearchResults
@using AnimalShelter.Web.Infrastructure.Enums
@model SearchResultsInputModel
<!-- Breadcrumbs & Page title-->
<div class="page-title">
    <div class="page-title-text"><span>Search Results</span></div>
    <ul class="breadcrumbs-custom">
        <li><a href="index.html">Home</a></li>
        <li><a href="adopt-a-pet.html">Adopt a Pet</a></li>
        <li class="active"><span data-content-to="#adopt-cats">Search Results</span></li>
    </ul>
</div>

<div class="shell">
    <div class="box-form box-form-1">
        <form class="form-style-classic">
            <div class="range range-xs-center range-sm-bottom spacing-30">
                <div class="cell-xs-10 cell-sm-6 cell-md-4">
                    <div class="form-group">
                        <label class="form-label-outside" for="Location">Област</label>
                        <div class="form-group">
                            <select class="form-control" asp-for="Location" asp-items="@Html.GetEnumSelectList<SearchCity>()"></select>
                            <label class="form-label" asp-for="Location"></label>
                        </div>
                    </div>
                </div>
                <div class="cell-xs-10 cell-sm-6 cell-md-4">
                    <div class="form-group">
                        <label class="form-label-outside" for="Type">Тип</label>
                        <select class="form-control" asp-for="Type" asp-items="@Html.GetEnumSelectList<SearchTypePet>()"></select>
                        <label class="form-label" asp-for="Type"></label>
                    </div>
                </div>
                <div class="cell-xs-10 cell-sm-6 cell-md-4">
                    <div class="form-group">
                        <label class="form-label-outside" for="Sex">Пол</label>
                        <select class="form-control" asp-for="Sex" asp-items="@Html.GetEnumSelectList<SearchSex>()"></select>
                        <label class="form-label" asp-for="Sex"></label>
                    </div>
                </div>
                <div class="cell-xs-10 cell-sm-6 cell-md-4">
                    <div class="form-group">
                        <label class="form-label-outside" for="PetStatus">Категория</label>
                        <select class="form-control" asp-for="PetStatus" asp-items="@Html.GetEnumSelectList<SearchPetStatus>()"></select>
                        <label class="form-label" asp-for="PetStatus"></label>
                    </div>
                </div>
                <div class="cell-xs-10 cell-sm-6 cell-md-4">
                    <div class="form-group">
                        <div onclick="searchAnimals()" class="btn btn-block btn-primary btn-effect-anis">Намери</div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<section class="section-md bg-white text-center">
    <div class="shell">
        <div class="group-xl group-middle">
            <div class="btn btn-circle btn-silver-outline btn-shadow active" id="dateOrder">Подреди по дата</div>
            <div class="btn btn-circle btn-silver-outline btn-shadow" id="likeOrder">подреди по лайкове</div>
            <div class="btn btn-icon btn-icon-left btn-silver-outline btn-shadow" id="ascOrder"><span class="icon icon-md material-icons-swap_vert"></span>Възходящ ред</div>
        </div>
    </div>
    <div class="shell">
        <!-- Bootstrap tabs-->
        <div class="tabs tabs-custom tabs-vertical tabs-corporate tabs-wide" data-url-tabs="true">
            <div class="tab-content">
                <div class="tab-pane fade in active" id="list">
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts{
    <script src="~/js/pagesManipulation/searchList.js"></script>
    <script src="~/js/pagesManipulation/listCreator.js"></script>
}
   