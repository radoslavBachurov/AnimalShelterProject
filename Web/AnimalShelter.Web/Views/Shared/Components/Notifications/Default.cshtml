@model AnimalShelter.Web.ViewModels.ViewComponents.NotificationViewComponentModel

<li>
    <a class="icon icon-xs icon-tan-hide material-icons-notifications_active"></a>
    @if (Model.AnswerCounter > 0)
    {
        <div id="noti_Counter">@Model.AnswerCounter</div>
    }
    <ul id="notiDrop" class="rd-navbar-dropdown tabs-nav">
        @for (int i = 0; i < Model.AnswerCounter; i++)
        {
            <li>
                <a asp-controller="Pet" asp-action="PetProfile" asp-route-id=@Model.Notifications[i].PostId>@(Model.Notifications[i].ReplyToComment?$"Имате отговор на ваш коментар в пост за {Model.Notifications[i].PostName}" : $"Имате нов коментар в вашият пост за {Model.Notifications[i].PostName}")</a>
            </li>
        }
    </ul>
</li>


<script>
</script>





